#! /usr/bin/bash

if [ -z "$1" ]; then
    echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-service 9134886d1f864aa5baabf13f36f4d037 backend-flask" 
    exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
    echo "No CONTAINER_NAME argument supplied eg ./bin/ecs/connect-to-service 9134886d1f864aa5baabf13f36f4d037 backend-flask" 
    exit 1
fi
CONTAINER_NAME=$2

echo "NAME: $CONTAINER_NAME"
echo "TASK: $TASK_ID"

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive