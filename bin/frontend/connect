#! /usr/bin/bash

if [ -z "$1" ]; then
    echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-frontend-react-js 9134886d1f864aa5baabf13f36f4d037" 
    exit 1
fi
TASK_ID=$1

CONTAINER_NAME=frontend-react-js

echo "NAME: $CONTAINER_NAME"
echo "TASK: $TASK_ID"

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/sh" \
--interactive