#! /usr/bin/bash

ABS_PATH=$(readlink -f "$0")

BIN_PATH=$(dirname $ABS_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)
DOCKER_PATH=$(dirname $PROJECT_PATH) 
FRONTEND_REACT_JS_PATH="$DOCKER_PATH/frontend-react-js"

echo $FRONTEND_REACT_JS_PATH

docker build \
--build-arg REACT_APP_BACKEND_URL="https://api.ncodes.ca" \
--build-arg REACT_APP_AWS_PROJECT_REGION="$AWS_DEFAULT_REGION" \
--build-arg REACT_APP_AWS_COGNITO_REGION="$AWS_DEFAULT_REGION" \
--build-arg REACT_APP_AWS_USER_POOLS_ID="ca-central-1_uzDTfbFtP" \
--build-arg REACT_APP_CLIENT_ID="1k9bvgd385i2q4t54cbskgcaoa" \
-t frontend-react-js \
-f "$FRONTEND_REACT_JS_PATH/Dockerfile.prod" \
"$FRONTEND_REACT_JS_PATH/."