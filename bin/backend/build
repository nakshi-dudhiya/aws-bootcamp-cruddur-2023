#! /usr/bin/bash

ABS_PATH=$(readlink -f "$0")

BIN_PATH=$(dirname $ABS_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)
DOCKER_PATH=$(dirname $PROJECT_PATH) 
BACKEND_FLASK_PATH="$DOCKER_PATH/backend-flask"

echo $ABS_PATH
echo $BIN_PATH
echo $PROJECT_PATH
echo $DOCKER_PATH
echo $BACKEND_FLASK_PATH

docker build \
-f "$BACKEND_FLASK_PATH/Dockerfile.prod" \
-t backend-flask-prod \
"$BACKEND_FLASK_PATH/."